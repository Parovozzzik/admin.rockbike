{% set parent_category_id = data.model.parent_category_id %}
{% if parent_category_id is not defined or parent_category_id == null %}
    {% set value_url = '#' %}
{% else %}
    {% set value_url = '/categories/view/' ~ parent_category_id %}
{% endif %}

<div class="g-pa-20">
    <div class="row">

        <div class="col-md-6">
            <div class="g-brd-around g-brd-gray-light-v7 g-rounded-4 g-pa-15 g-pa-20--md">
                <form class="js-validate" novalidate="novalidate" name="category">
                    <header>
                        <h2 class="text-uppercase g-font-size-12 g-font-size-default--md g-color-black mb-0">
                            <a href="/categories" class="btn btn-xs u-btn-outline-teal g-mr-10">
                                <span class="">
                                    <i class="hs-admin-angle-left"></i>
                                </span>
                            </a>
                            Category #{{ data.model.category_id }}
                        </h2>
                    </header>

                    <hr class="d-flex g-brd-gray-light-v7 g-my-15 g-my-30--md">

                    {% include '/App/Views/Components/Inputs/text.twig' with {
                        'id': 'name',
                        'model': 'category',
                        'value': data.model.name,
                        'disabled': 1
                    } %}

                    {% include '/App/Views/Components/Inputs/text.twig' with {
                        'id': 'slug',
                        'model': 'category',
                        'value': data.model.slug,
                        'disabled': 1
                    } %}

                    {% include '/App/Views/Components/Inputs/textarea.twig' with {
                        'id': 'description',
                        'model': 'category',
                        'value': data.model.description,
                        'disabled': 1

                    } %}

                    {% include '/App/Views/Components/Inputs/select_search.twig' with {
                        'id': 'parent_category_name',
                        'model': 'category',
                        'value': data.model.parent_category_name,
                        'value_url': value_url,
                        'disabled': 1
                    } %}

                    {% include '/App/Views/Components/Inputs/checkbox.twig' with {
                        'id': 'visible',
                        'model': 'category',
                        'value': data.model.visible,
                        'text_yes': 'Visible',
                        'text_no': 'Not visible',
                        'disabled': 1
                    } %}

                    {% include '/App/Views/Components/Inputs/checkbox.twig' with {
                        'id': 'deleted',
                        'model': 'category',
                        'value': data.model.deleted,
                        'text_yes': 'Deleted',
                        'text_no': 'Not deleted',
                        'disabled': 1
                    } %}

                    <a href="/categories/edit/{{ data.model.category_id }}"
                       class="btn btn-md btn-block u-btn-blue rounded text-uppercase g-py-13" type="submit">
                        Edit
                    </a>
                </form>
            </div>
        </div>

        {% include '/App/Views/Categories/attrs_categories.twig' with {
            'attrs': params.attrs
        } %}

    </div>
</div>