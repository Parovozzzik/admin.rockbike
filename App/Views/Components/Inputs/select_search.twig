{% if disabled is not defined %}
    {% set disabled = 0 %}
{% endif %}
{% if error is not defined %}
    {% set error = 0 %}
{% endif %}

<div class="row g-mb-20">
    <div class="col-md-3 align-self-center g-mb-5 g-mb-0--md">
        <label class="mb-0" for="{{ id }}">{{ id|capitalize|replace({'_':' '}) }}</label>
    </div>
    {% if disabled == 1 %}
        <div class="col-md-9 align-self-center">
            <div class="g-pos-rel">
                <a class="btn u-input-btn--v1 g-width-40 u-btn-teal g-rounded-right-4" type="submit"
                   href="{{ value_url }}">
                    <i class="hs-admin-angle-double-right g-absolute-centered g-font-size-16 g-color-white"></i>
                </a>
                <input id="{{ id }}" disabled="disabled" type="text" value="{{ value }}"
                       class="form-control form-control-md g-brd-gray-light-v7 g-brd-gray-light-v3 g-rounded-4 g-px-14 g-py-10">
            </div>
        </div>
    {% else %}
        <div class="col-md-9 align-self-center">
            <div class="form-group g-pos-rel mb-0">
                <div class="form-group u-select--v3 g-pos-rel g-brd-gray-light-v7 g-rounded-4 mb-0">
                    <select id="{{ id }}" name="{{ model }}[{{ id }}]"
                            class="js-select u-select--v3-select u-sibling w-100"
                            title="{{ id|capitalize|replace({'_':' '}) }}" style="display: none;"
                            data-live-search="true"
                            data-value-exclude="{{ value_exclude }}">
                        {% for key, item in values %}
                            <option value="{{ key }}" {{ (value == key) ? 'selected="selected"' : '' }}
                                    data-content='<span class="d-flex align-items-center w-100"><span>{{ item }}</span></span>'>
                                {{ item }}
                            </option>
                        {% endfor %}
                    </select>

                    <div class="d-flex align-items-center g-absolute-centered--y g-right-0 g-color-gray-light-v6 g-color-lightblue-v9--sibling-opened g-mr-15">
                        <i class="hs-admin-angle-down"></i>
                    </div>
                </div>
                {% if error != 0 %}
                    {% for item in error %}
                        <small class="g-font-weight-300 g-font-size-12 g-color-red g-pt-5">
                            {{ item }}
                        </small>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    {% endif %}
</div>


