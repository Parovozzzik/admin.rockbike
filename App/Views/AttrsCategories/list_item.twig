<tr id="attrs-categories-{{ attr_category.attr_category_id }}" role="tab">

    {% include '/App/Views/Components/Table/td/link.twig' with {
        'href': '/attrs-categories/view/' ~ attr_category.attr_category_id,
        'value': attr_category.attr_category_id,
    } %}

    {% include '/App/Views/Components/Table/td/link.twig' with {
        'href': '/attrs/view/' ~ attr_category.attr_id,
        'value': attr_category.attr_name,
    } %}

    {% include '/App/Views/Components/Table/td/link.twig' with {
        'href': '/categories/view/' ~ attr_category.category_id,
        'value': attr_category.category_name,
    } %}


    {% set buttons = [
        {'icon': 'hs-admin-trash', 'href': '/attrs-categories/delete/' ~ attr_category.attr_category_id, 'onclick': 'Are you sure you want to delete this item?'},
    ] %}

    {% include '/App/Views/Components/Table/td/buttons.twig' with {
        'buttons': buttons
    } %}

</tr>