{% set category_id = data.model.category_id %}
{% if category_id is not defined or category_id == null %}
    {% set category_url = '#' %}
{% else %}
    {% set category_url = '/categories/view/' ~ category_id %}
{% endif %}

{% set attr_id = data.model.attr_id %}
{% if attr_id is not defined or attr_id == null %}
    {% set attr_url = '#' %}
{% else %}
    {% set attr_url = '/attrs/view/' ~ attr_id %}
{% endif %}

<div class="g-pa-20">
    <div class="row">
        <div class="col-md-6">
            <div class="g-brd-around g-brd-gray-light-v7 g-rounded-4 g-pa-15 g-pa-20--md">
                <form class="js-validate" novalidate="novalidate" name="attr_category">
                    <header>
                        <h2 class="text-uppercase g-font-size-12 g-font-size-default--md g-color-black mb-0">
                            <a href="/attrs-categories" class="btn btn-xs u-btn-outline-teal g-mr-10">
                                <span class="">
                                    <i class="hs-admin-angle-left"></i>
                                </span>
                            </a>
                            Attr Category #{{ data.model.attr_category_id }}
                        </h2>
                    </header>

                    <hr class="d-flex g-brd-gray-light-v7 g-my-15 g-my-30--md">

                    {% include '/App/Views/Components/Inputs/select_search.twig' with {
                        'id': 'category_name',
                        'model': 'attr_category',
                        'value': data.model.category_name,
                        'value_url': category_url,
                        'disabled': 1
                    } %}

                    {% include '/App/Views/Components/Inputs/select_search.twig' with {
                        'id': 'attr_name',
                        'model': 'attr_category',
                        'value': data.model.attr_name,
                        'value_url': attr_url,
                        'disabled': 1
                    } %}

                    <a href="/attrs-categories/delete/{{ data.model.attr_category_id }}"
                       class="btn btn-md btn-block u-btn-primary rounded text-uppercase g-py-13" type="submit"
                       onclick="return confirm('Are you sure you want to delete this item?');">
                        Delete
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>