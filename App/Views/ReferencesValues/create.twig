<div class="g-pa-20">
    <div class="row">

        <div class="col-md-6">
            <div class="g-brd-around g-brd-gray-light-v7 g-rounded-4 g-pa-15 g-pa-20--md">
                <form action="/references-values/{{ params.request.reference_value_id != null ? ('edit/' ~ params.request.reference_value_id) : 'create' }}"
                      method="post" class="js-validate" novalidate="novalidate" name="reference_value">
                    <header>
                        <h2 class="text-uppercase g-font-size-12 g-font-size-default--md g-color-black mb-0">
                            <a href="/references-values" class="btn btn-xs u-btn-outline-teal g-mr-10">
                                <span class="">
                                    <i class="hs-admin-angle-left"></i>
                                </span>
                            </a>
                            Reference value #{{ params.request.reference_value_id }}
                        </h2>
                    </header>

                    <hr class="d-flex g-brd-gray-light-v7 g-my-15 g-my-30--md">

                    <input id="reference_value_id" name="reference[reference_value_id]" type="hidden" value="{{ params.request.reference_value_id }}"/>

                    {% include '/App/Views/Components/Inputs/select_search.twig' with {
                        'id': 'reference_id',
                        'model': 'reference_value',
                        'value': params.request.reference_id,
                        'values': params.reference,
                        'error': data.errors.reference_id|length > 0 ? data.errors.reference_id : 0
                    } %}

                    {% include '/App/Views/Components/Inputs/text.twig' with {
                        'id': 'value_int',
                        'model': 'reference_value',
                        'value': params.request.value_int,
                        'error': data.errors.value_int|length > 0 ? data.errors.value_int : 0
                    } %}

                    {% include '/App/Views/Components/Inputs/text.twig' with {
                        'id': 'value_string',
                        'model': 'reference_value',
                        'value': params.request.value_string,
                        'error': data.errors.value_string|length > 0 ? data.errors.value_string : 0
                    } %}

                    {% include '/App/Views/Components/Inputs/textarea.twig' with {
                        'id': 'value_text',
                        'model': 'reference_value',
                        'value': params.request.value_text,
                        'error': data.errors.value_text|length > 0 ? data.errors.value_text : 0
                    } %}

                    {% include '/App/Views/Components/Inputs/checkbox.twig' with {
                        'id': 'visible',
                        'model': 'reference_value',
                        'value': params.request.visible,
                        'text_yes': 'Visible',
                        'text_no': 'Not visible',
                        'disabled': 0
                    } %}

                    {% include '/App/Views/Components/Inputs/checkbox.twig' with {
                        'id': 'deleted',
                        'model': 'reference_value',
                        'value': params.request.deleted,
                        'text_yes': 'Deleted',
                        'text_no': 'Not deleted',
                        'disabled': 0
                    } %}

                    <button class="btn btn-md btn-block u-btn-blue rounded text-uppercase g-py-13" type="submit">
                        Save
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
