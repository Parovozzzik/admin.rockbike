<div class="g-pa-20">
    <div class="row">

        <div class="col-md-6">
            <div class="g-brd-around g-brd-gray-light-v7 g-rounded-4 g-pa-15 g-pa-20--md">
                <form action="/attrs/{{ params.request.attr_id != null ? ('edit/' ~ params.request.attr_id) : 'create' }}"
                      method="post" class="js-validate" novalidate="novalidate" name="attr">
                    <header>
                        <h2 class="text-uppercase g-font-size-12 g-font-size-default--md g-color-black mb-0">
                            <a href="/attrs" class="btn btn-xs u-btn-outline-teal g-mr-10">
                                <span class="">
                                    <i class="hs-admin-angle-left"></i>
                                </span>
                            </a>
                            Attribute #{{ params.request.attr_id }}
                        </h2>
                    </header>

                    <hr class="d-flex g-brd-gray-light-v7 g-my-15 g-my-30--md">

                    <input id="attr_id" name="attr[attr_id]" type="hidden" value="{{ params.request.attr_id }}"/>

                    {% include '/App/Views/Components/Inputs/text.twig' with {
                        'id': 'name',
                        'model': 'attr',
                        'value': params.request.name,
                        'error': data.errors.name|length > 0 ? data.errors.name : 0
                    } %}

                    {% include '/App/Views/Components/Inputs/text.twig' with {
                        'id': 'slug',
                        'model': 'attr',
                        'value': params.request.slug,
                        'error': data.errors.slug|length > 0 ? data.errors.slug : 0
                    } %}

                    {% include '/App/Views/Components/Inputs/textarea.twig' with {
                        'id': 'description',
                        'model': 'attr',
                        'value': params.request.description,
                        'error': data.errors.description|length > 0 ? data.errors.description : 0
                    } %}

                    {% include '/App/Views/Components/Inputs/select_search.twig' with {
                        'id': 'type',
                        'model': 'attr',
                        'value': params.request.type,
                        'values': params.types,
                        'error': data.errors.type|length > 0 ? data.errors.type : 0
                    } %}

                    {% include '/App/Views/Components/Inputs/text.twig' with {
                        'id': 'round',
                        'model': 'attr',
                        'value': params.request.round,
                        'error': data.errors.round|length > 0 ? data.errors.round : 0,
                        'type': 'number'
                    } %}

                    {% include '/App/Views/Components/Inputs/select_search.twig' with {
                        'id': 'reference_id',
                        'model': 'attr',
                        'value': params.request.reference_id,
                        'values': params.reference,
                        'error': data.errors.reference_id|length > 0 ? data.errors.reference_id : 0
                    } %}

                    {% include '/App/Views/Components/Inputs/text.twig' with {
                        'id': 'table_name',
                        'model': 'attr',
                        'value': params.request.table_name,
                        'error': data.errors.table_name|length > 0 ? data.errors.table_name : 0
                    } %}

                    {% include '/App/Views/Components/Inputs/checkbox.twig' with {
                        'id': 'visible',
                        'model': 'attr',
                        'value': params.request.visible,
                        'text_yes': 'Visible',
                        'text_no': 'Not visible',
                        'disabled': 0
                    } %}

                    {% include '/App/Views/Components/Inputs/checkbox.twig' with {
                        'id': 'deleted',
                        'model': 'attr',
                        'value': params.request.deleted,
                        'text_yes': 'Deleted',
                        'text_no': 'Not deleted',
                        'disabled': 0
                    } %}

                    <button class="btn btn-md btn-block u-btn-blue rounded text-uppercase g-py-13" type="submit">
                        Save
                    </button>
                </form>
            </div>
        </div>

        {% if params.request.attr_id != null %}
            {% include '/App/Views/Attrs/attrs_categories.twig' with {
                'categories': params.categories
            } %}
        {% endif %}
    </div>
</div>
